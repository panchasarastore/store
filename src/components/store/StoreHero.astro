---
const { safeStore } = Astro.props;
---

<section class="store-hero" id="about">
    <h2 class="store-tagline store-template-tagline">{safeStore.tagline}</h2>
    <div class="store-about-preview">
        <p class="store-template-about">{safeStore.about}</p>
    </div>
</section>

<style is:inline>
    .store-hero {
        padding: 4rem 1rem 2rem;
        text-align: center;
        max-width: 800px;
        margin: 0 auto;
    }
    .store-tagline {
        font-family: var(--font-display);
        font-size: 2.5rem;
        line-height: 1.2;
        margin-bottom: 1.5rem;
        color: var(--theme-ink);
    }
    .store-about-preview p {
        font-size: 1.05rem;
        line-height: 1.7;
        opacity: 0.85;
        color: var(--theme-ink);
        margin-bottom: 2rem;
        white-space: pre-wrap;
    }
</style>
